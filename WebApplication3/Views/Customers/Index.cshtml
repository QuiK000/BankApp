@model IEnumerable<WebApplication3.Models.Customer>

@{
    ViewData["Title"] = "Клієнти банку";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold">
            <i class="fas fa-users text-primary me-2"></i>
            Клієнти банку
        </h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-user-plus me-2"></i>
            Додати клієнта
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>
                                <i class="fas fa-user me-1"></i>
                                Ім'я клієнта
                            </th>
                            <th>
                                <i class="fas fa-phone me-1"></i>
                                Телефон
                            </th>
                            <th>
                                <i class="fas fa-envelope me-1"></i>
                                Email
                            </th>
                            <th>
                                <i class="fas fa-credit-card me-1"></i>
                                Кількість кредитів
                            </th>
                            <th>
                                <i class="fas fa-calendar me-1"></i>
                                Дата реєстрації
                            </th>
                            <th>
                                <i class="fas fa-info-circle me-1"></i>
                                Статус
                            </th>
                            <th class="text-center">Дії</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var customer in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle me-2">
                                            <i class="fas fa-user"></i>
                                        </div>
                                        <strong>@customer.FullName</strong>
                                    </div>
                                </td>
                                <td>@customer.Phone</td>
                                <td>@customer.Email</td>
                                <td>
                                    <span class="badge bg-primary">
                                        @customer.CustomerCredits.Count кредитів
                                    </span>
                                </td>
                                <td>@customer.RegistrationDate.ToString("dd.MM.yyyy")</td>
                                <td>
                                    <span class="badge @(customer.Status == "Активний" ? "bg-success" : "bg-secondary")">
                                        @customer.Status
                                    </span>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@customer.Id" 
                                           class="btn btn-sm btn-info" title="Деталі">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@customer.Id" 
                                           class="btn btn-sm btn-warning" title="Редагувати">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@customer.Id" 
                                           class="btn btn-sm btn-danger" title="Видалити">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-circle {
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
    }
    
    .table tbody tr:hover {
        background-color: #f8f9fa;
        cursor: pointer;
    }
</style>