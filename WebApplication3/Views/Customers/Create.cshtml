@model WebApplication3.Models.Customer

@{
    ViewData["Title"] = "Додати клієнта";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-gradient-primary text-white py-3">
                    <h4 class="mb-0">
                        <i class="fas fa-user-plus me-2"></i>
                        Додати нового клієнта
                    </h4>
                </div>
                
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <h5 class="fw-bold mb-3 text-primary">
                            <i class="fas fa-user me-2"></i>
                            Особисті дані
                        </h5>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="FullName" class="form-label"></label>
                                <input asp-for="FullName" class="form-control" placeholder="Іванов Іван Іванович" />
                                <span asp-validation-for="FullName" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="DateOfBirth" class="form-label"></label>
                                <input asp-for="DateOfBirth" class="form-control" type="date" />
                                <span asp-validation-for="DateOfBirth" class="text-danger small"></span>
                            </div>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Phone" class="form-label"></label>
                                <input asp-for="Phone" class="form-control" placeholder="+380501234567" />
                                <span asp-validation-for="Phone" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label"></label>
                                <input asp-for="Email" class="form-control" placeholder="example@email.com" />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="TaxNumber" class="form-label"></label>
                                <input asp-for="TaxNumber" class="form-control" placeholder="1234567890" maxlength="10" />
                                <span asp-validation-for="TaxNumber" class="text-danger small"></span>
                            </div>
                        </div>
                        
                        <div class="mb-4">
                            <label asp-for="Address" class="form-label"></label>
                            <textarea asp-for="Address" class="form-control" rows="2" 
                                      placeholder="м. Київ, вул. Хрещатик, 1"></textarea>
                            <span asp-validation-for="Address" class="text-danger small"></span>
                        </div>
                        
                        <hr>
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-times me-2"></i>
                                Скасувати
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save me-2"></i>
                                Зберегти клієнта
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}