@model WebApplication3.Models.Credit

@{
    ViewData["Title"] = $"Деталі: {Model.Name}";
    var totalApplications = ViewBag.TotalApplications as int? ?? 0;
    var approvedApplications = ViewBag.ApprovedApplications as int? ?? 0;
    var totalAmount = ViewBag.TotalAmount as decimal? ?? 0;
    var averageAmount = ViewBag.AverageAmount as decimal? ?? 0;
}

<div class="container-fluid">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-action="Index">Управління кредитами</a>
            </li>
            <li class="breadcrumb-item active">@Model.Name</li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold">
            <i class="fas @Model.IconClass text-primary me-2"></i>
            @Model.Name
        </h1>
        <div>
            <a asp-action="Statistics" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                <i class="fas fa-chart-bar me-2"></i>
                Детальна статистика
            </a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="fas fa-edit me-2"></i>
                Редагувати
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>
                Назад
            </a>
        </div>
    </div>

    <!-- Статистика -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm bg-primary text-white">
                <div class="card-body text-center">
                    <i class="fas fa-file-alt fa-2x mb-2 opacity-75"></i>
                    <h6 class="text-white-50">Всього заявок</h6>
                    <h2 class="fw-bold">@totalApplications</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm bg-success text-white">
                <div class="card-body text-center">
                    <i class="fas fa-check-circle fa-2x mb-2 opacity-75"></i>
                    <h6 class="text-white-50">Схвалено</h6>
                    <h2 class="fw-bold">@approvedApplications</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm bg-info text-white">
                <div class="card-body text-center">
                    <i class="fas fa-money-bill-wave fa-2x mb-2 opacity-75"></i>
                    <h6 class="text-white-50">Загальна сума</h6>
                    <h4 class="fw-bold">@totalAmount.ToString("N0") ₴</h4>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm bg-warning text-white">
                <div class="card-body text-center">
                    <i class="fas fa-calculator fa-2x mb-2 opacity-75"></i>
                    <h6 class="text-white-50">Середня сума</h6>
                    <h4 class="fw-bold">@averageAmount.ToString("N0") ₴</h4>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8 mb-4">
            <!-- Основна інформація -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle text-primary me-2"></i>
                        Основна інформація
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="text-muted small mb-1">Назва кредиту</label>
                            <div class="h5 fw-bold mb-0">@Model.Name</div>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small mb-1">Іконка</label>
                            <div>
                                <i class="fas @Model.IconClass fa-2x text-primary"></i>
                                <span class="ms-2 text-muted">@Model.IconClass</span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="text-muted small mb-1">Опис</label>
                        <div class="p-3 bg-light rounded">@Model.Description</div>
                    </div>

                    <hr>

                    <h6 class="fw-bold mb-3 text-primary">
                        <i class="fas fa-percent me-2"></i>
                        Процентна ставка
                    </h6>

                    <div class="text-center p-4 bg-light rounded mb-4">
                        <div class="display-4 fw-bold text-success">@Model.InterestRate%</div>
                        <small class="text-muted">річна процентна ставка</small>
                    </div>

                    <hr>

                    <h6 class="fw-bold mb-3 text-primary">
                        <i class="fas fa-money-bill-wave me-2"></i>
                        Сума кредиту
                    </h6>

                    <div class="row mb-3">
                        <div class="col-md-6 mb-3">
                            <div class="card bg-light border-0">
                                <div class="card-body text-center">
                                    <small class="text-muted d-block mb-1">Мінімальна сума</small>
                                    <h4 class="fw-bold text-primary mb-0">@Model.MinAmount.ToString("N0") грн</h4>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="card bg-light border-0">
                                <div class="card-body text-center">
                                    <small class="text-muted d-block mb-1">Максимальна сума</small>
                                    <h4 class="fw-bold text-primary mb-0">@Model.MaxAmount.ToString("N0") грн</h4>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr>

                    <h6 class="fw-bold mb-3 text-primary">
                        <i class="fas fa-calendar me-2"></i>
                        Термін кредитування
                    </h6>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="card bg-light border-0">
                                <div class="card-body text-center">
                                    <small class="text-muted d-block mb-1">Мінімальний термін</small>
                                    <h4 class="fw-bold text-primary mb-0">@Model.MinTermMonths міс.</h4>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="card bg-light border-0">
                                <div class="card-body text-center">
                                    <small class="text-muted d-block mb-1">Максимальний термін</small>
                                    <h4 class="fw-bold text-primary mb-0">@Model.MaxTermMonths міс.</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Вимоги -->
            <div class="card shadow-sm border-0">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-list-check text-primary me-2"></i>
                        Необхідні документи та вимоги
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-light border-start border-primary border-4">
                        @foreach (var req in Model.Requirements.Split(','))
                        {
                            <div class="mb-2">
                                <i class="fas fa-check-circle text-success me-2"></i>
                                @req.Trim()
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Швидкі дії -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-gradient-primary text-white">
                    <h6 class="mb-0">
                        <i class="fas fa-bolt me-2"></i>
                        Швидкі дії
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="fas fa-edit me-2"></i>
                            Редагувати кредит
                        </a>
                        <a asp-action="Statistics" asp-route-id="@Model.Id" class="btn btn-info">
                            <i class="fas fa-chart-bar me-2"></i>
                            Детальна статистика
                        </a>
                        <a asp-controller="Admin" asp-action="Applications" 
                           asp-route-creditId="@Model.Id" 
                           class="btn btn-primary">
                            <i class="fas fa-file-alt me-2"></i>
                            Всі заявки по кредиту
                        </a>
                        <hr>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                            <i class="fas fa-trash me-2"></i>
                            Видалити кредит
                        </a>
                    </div>
                </div>
            </div>

            <!-- Інформація -->
            <div class="alert alert-info border-0 shadow-sm">
                <h6 class="fw-bold mb-2">
                    <i class="fas fa-info-circle me-2"></i>
                    Інформація
                </h6>
                <ul class="mb-0 ps-3 small">
                    <li>Цей кредитний продукт доступний для всіх користувачів</li>
                    <li>Схвалення заявки залежить від кредитного рейтингу клієнта</li>
                    <li>Статистика оновлюється в реальному часі</li>
                    <li>Зміни вступають в силу відразу після збереження</li>
                </ul>
            </div>
        </div>
    </div>
</div>