@model WebApplication3.Models.Credit

@{
    ViewData["Title"] = "Редагувати кредит";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-gradient-warning text-white py-3">
                    <h4 class="mb-0">
                        <i class="fas fa-edit me-2"></i>
                        Редагувати: @Model.Name
                    </h4>
                </div>
                
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        
                        <div class="row mb-3">
                            <div class="col-md-8">
                                <label asp-for="Name" class="form-label fw-bold"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-4">
                                <label asp-for="IconClass" class="form-label fw-bold"></label>
                                <input asp-for="IconClass" class="form-control" />
                                <span asp-validation-for="IconClass" class="text-danger small"></span>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold"></label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="InterestRate" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <input asp-for="InterestRate" class="form-control" type="number" step="0.1" />
                                    <span class="input-group-text">%</span>
                                </div>
                                <span asp-validation-for="InterestRate" class="text-danger small"></span>
                            </div>
                        </div>
                        
                        <hr>
                        <h5 class="fw-bold mb-3 text-primary">Сума кредиту</h5>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="MinAmount" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <input asp-for="MinAmount" class="form-control" type="number" />
                                    <span class="input-group-text">грн</span>
                                </div>
                                <span asp-validation-for="MinAmount" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="MaxAmount" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <input asp-for="MaxAmount" class="form-control" type="number" />
                                    <span class="input-group-text">грн</span>
                                </div>
                                <span asp-validation-for="MaxAmount" class="text-danger small"></span>
                            </div>
                        </div>
                        
                        <hr>
                        <h5 class="fw-bold mb-3 text-primary">Термін кредитування</h5>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="MinTermMonths" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <input asp-for="MinTermMonths" class="form-control" type="number" />
                                    <span class="input-group-text">міс.</span>
                                </div>
                                <span asp-validation-for="MinTermMonths" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="MaxTermMonths" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <input asp-for="MaxTermMonths" class="form-control" type="number" />
                                    <span class="input-group-text">міс.</span>
                                </div>
                                <span asp-validation-for="MaxTermMonths" class="text-danger small"></span>
                            </div>
                        </div>
                        
                        <hr>
                        
                        <div class="mb-4">
                            <label asp-for="Requirements" class="form-label fw-bold"></label>
                            <textarea asp-for="Requirements" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Requirements" class="text-danger small"></span>
                        </div>
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary btn-lg">
                                <i class="fas fa-times me-2"></i>
                                Скасувати
                            </a>
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="fas fa-save me-2"></i>
                                Зберегти зміни
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}