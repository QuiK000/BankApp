@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - BankCredit</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-gradient-primary shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" asp-area="" asp-controller="Credits" asp-action="Index">
                <i class="fas fa-university me-2"></i>
                BankCredit
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Credits" asp-action="Index">
                            <i class="fas fa-home me-1"></i>
                            Кредити
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Credits" asp-action="Calculator">
                            <i class="fas fa-calculator me-1"></i>
                            Калькулятор
                        </a>
                    </li>
                    
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Credits" asp-action="MyApplications">
                                <i class="fas fa-list me-1"></i>
                                Мої заявки
                            </a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Credits" asp-action="CheckEligibility">
                                <i class="fas fa-user-check me-1"></i>
                                Мій рейтинг
                            </a>
                        </li>
                        
                        @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" 
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-cog me-1"></i>
                                    Управління
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="Dashboard">
                                            <i class="fas fa-tachometer-alt me-2"></i>
                                            Панель адміністратора
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="Applications">
                                            <i class="fas fa-file-alt me-2"></i>
                                            Всі заявки
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Customers" asp-action="Index">
                                            <i class="fas fa-users me-2"></i>
                                            Клієнти
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="CreditsAdmin" asp-action="Index">
                                            <i class="fas fa-credit-card me-2"></i>
                                            Управління кредитами
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Blacklist" asp-action="Index">
                                            <i class="fas fa-ban me-2"></i>
                                            Чорний список
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Analytics" asp-action="Scoring">
                                            <i class="fas fa-chart-line me-2"></i>
                                            Кредитний скоринг
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="Reports">
                                            <i class="fas fa-chart-bar me-2"></i>
                                            Звіти та статистика
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                    }
                </ul>
                
                <ul class="navbar-nav">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        var user = await UserManager.GetUserAsync(User);
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" 
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user-circle me-1"></i>
                                @user?.FullName
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                                        <i class="fas fa-user me-2"></i>
                                        Мій профіль
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Credits" asp-action="MyApplications">
                                        <i class="fas fa-list me-2"></i>
                                        Мої заявки
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Account" asp-action="ChangePassword">
                                        <i class="fas fa-key me-2"></i>
                                        Змінити пароль
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class="fas fa-sign-out-alt me-2"></i>
                                            Вийти
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">
                                <i class="fas fa-sign-in-alt me-1"></i>
                                Вхід
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-light text-primary ms-2" 
                               asp-controller="Account" asp-action="Register">
                                <i class="fas fa-user-plus me-1"></i>
                                Реєстрація
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>

<div class="container mt-4 mb-5">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="footer mt-auto py-4 bg-dark text-white">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <h5 class="fw-bold mb-3">
                    <i class="fas fa-university me-2"></i>
                    BankCredit
                </h5>
                <p class="text-white-50">Ваш надійний партнер у світі фінансів</p>
            </div>
            <div class="col-md-4">
                <h6 class="fw-bold mb-3">Контакти</h6>
                <ul class="list-unstyled text-white-50">
                    <li><i class="fas fa-phone me-2"></i>0 800 123 456</li>
                    <li><i class="fas fa-envelope me-2"></i>info@bankcredit.ua</li>
                    <li><i class="fas fa-map-marker-alt me-2"></i>м. Хмельницький, вул. Банківська, 1</li>
                </ul>
            </div>
            <div class="col-md-4">
                <h6 class="fw-bold mb-3">Графік роботи</h6>
                <p class="text-white-50">
                    Пн-Пт: 9:00 - 18:00<br>
                    Сб-Нд: Вихідний
                </p>
            </div>
        </div>
        <hr class="my-4 bg-white-50">
        <div class="text-center text-white-50">
            &copy; 2025 BankCredit. Всі права захищені.
        </div>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>