@model WebApplication3.Models.BlacklistEntry

@{
    ViewData["Title"] = "Видалити запис";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-danger text-white py-3">
                    <h4 class="mb-0">
                        <i class="fas fa-trash me-2"></i>
                        Підтвердження видалення
                    </h4>
                </div>
                
                <div class="card-body p-4">
                    <div class="alert alert-danger border-0 mb-4">
                        <div class="d-flex">
                            <div class="me-3">
                                <i class="fas fa-exclamation-triangle fa-2x"></i>
                            </div>
                            <div>
                                <h6 class="fw-bold mb-2">Увага!</h6>
                                <p class="mb-0">
                                    Ви дійсно бажаєте <strong>ПОВНІСТЮ ВИДАЛИТИ</strong> запис про 
                                    <strong>@Model.FullName</strong> з бази даних?
                                    <br><br>
                                    Цю дію <strong>неможливо буде відмінити!</strong>
                                    <br><br>
                                    <small class="text-muted">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Рекомендується використовувати "Зняти з блокування" замість повного видалення.
                                    </small>
                                </p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="card bg-light border-0 mb-4">
                        <div class="card-body">
                            <h6 class="fw-bold mb-3">Інформація про запис:</h6>
                            
                            <div class="row mb-2">
                                <div class="col-md-4"><strong>ПІБ:</strong></div>
                                <div class="col-md-8">@Model.FullName</div>
                            </div>
                            
                            <div class="row mb-2">
                                <div class="col-md-4"><strong>ІПН:</strong></div>
                                <div class="col-md-8"><code>@Model.TaxNumber</code></div>
                            </div>
                            
                            <div class="row mb-2">
                                <div class="col-md-4"><strong>Причина:</strong></div>
                                <div class="col-md-8">
                                    <span class="badge bg-danger">@Model.Reason</span>
                                </div>
                            </div>
                            
                            @if (Model.DebtAmount.HasValue)
                            {
                                <div class="row mb-2">
                                    <div class="col-md-4"><strong>Сума боргу:</strong></div>
                                    <div class="col-md-8">
                                        <span class="text-danger fw-bold">@Model.DebtAmount.Value.ToString("N2") грн</span>
                                    </div>
                                </div>
                            }
                            
                            <div class="row mb-2">
                                <div class="col-md-4"><strong>Статус:</strong></div>
                                <div class="col-md-8">
                                    <span class="badge @(Model.IsActive ? "bg-danger" : "bg-success")">
                                        @(Model.IsActive ? "Активний" : "Знято з блокування")
                                    </span>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-4"><strong>Дата додавання:</strong></div>
                                <div class="col-md-8">@Model.AddedDate.ToString("dd.MM.yyyy HH:mm")</div>
                            </div>
                        </div>
                    </div>
                    
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary btn-lg">
                                <i class="fas fa-times me-2"></i>
                                Скасувати
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="fas fa-trash me-2"></i>
                                Підтвердити видалення
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            
            <div class="alert alert-warning border-0 mt-3">
                <i class="fas fa-lightbulb me-2"></i>
                <strong>Альтернатива:</strong> Якщо ви хочете тимчасово деактивувати запис, 
                використайте функцію "Зняти з блокування" замість повного видалення.
            </div>
        </div>
    </div>
</div>