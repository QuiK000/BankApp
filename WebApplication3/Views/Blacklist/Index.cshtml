<!-- Blacklist/Index.cshtml -->
@model IEnumerable<WebApplication3.Models.BlacklistEntry>

@{
    ViewData["Title"] = "Чорний список";
    var searchTerm = ViewBag.SearchTerm as string;
    var showInactive = ViewBag.ShowInactive as bool? ?? false;
    var activeCount = ViewBag.ActiveCount as int? ?? 0;
    var inactiveCount = ViewBag.InactiveCount as int? ?? 0;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold">
            <i class="fas fa-ban text-danger me-2"></i>
            Чорний список
        </h1>
        <div>
            <a asp-action="Check" class="btn btn-outline-primary me-2">
                <i class="fas fa-search me-2"></i>
                Перевірити особу
            </a>
            <a asp-action="Create" class="btn btn-danger">
                <i class="fas fa-user-plus me-2"></i>
                Додати до списку
            </a>
        </div>
    </div>

    <!-- Статистика -->
    <div class="row mb-4">
        <div class="col-md-6 mb-3">
            <div class="card border-0 shadow-sm bg-danger text-white">
                <div class="card-body">
                    <h6 class="text-white-50">Активні записи</h6>
                    <h2 class="fw-bold">@activeCount</h2>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="card border-0 shadow-sm bg-success text-white">
                <div class="card-body">
                    <h6 class="text-white-50">Знято з блокування</h6>
                    <h2 class="fw-bold">@inactiveCount</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Пошук та фільтри -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get">
                <div class="row">
                    <div class="col-md-8 mb-3">
                        <input type="text" name="searchTerm" class="form-control" 
                               placeholder="Пошук за ім'ям, ІПН, телефоном або email" 
                               value="@searchTerm">
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="showInactive" 
                                   id="showInactive" @(showInactive ? "checked" : "")>
                            <label class="form-check-label" for="showInactive">
                                Показати знятих з блокування
                            </label>
                        </div>
                    </div>
                </div>
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search me-2"></i>
                        Пошук
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-redo me-2"></i>
                        Скинути
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Таблиця -->
    <div class="card shadow-sm border-0">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>ПІБ</th>
                                <th>ІПН</th>
                                <th>Контакти</th>
                                <th>Причина</th>
                                <th>Сума боргу</th>
                                <th>Статус</th>
                                <th>Дата додавання</th>
                                <th class="text-center">Дії</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var entry in Model)
                            {
                                <tr class="@(!entry.IsActive ? "table-secondary" : "")">
                                    <td>
                                        <strong>@entry.FullName</strong>
                                        @if (entry.DateOfBirth.HasValue)
                                        {
                                            <br><small class="text-muted">@entry.DateOfBirth.Value.ToString("dd.MM.yyyy")</small>
                                        }
                                    </td>
                                    <td><code>@entry.TaxNumber</code></td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(entry.Phone))
                                        {
                                            <div><i class="fas fa-phone me-1"></i>@entry.Phone</div>
                                        }
                                        @if (!string.IsNullOrEmpty(entry.Email))
                                        {
                                            <div><i class="fas fa-envelope me-1"></i>@entry.Email</div>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-danger">@entry.Reason</span>
                                    </td>
                                    <td>
                                        @if (entry.DebtAmount.HasValue)
                                        {
                                            <strong class="text-danger">@entry.DebtAmount.Value.ToString("N0") ₴</strong>
                                        }
                                        else
                                        {
                                            <span class="text-muted">—</span>
                                        }
                                    </td>
                                    <td>
                                        @if (entry.IsActive)
                                        {
                                            <span class="badge bg-danger">Активний</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">Знято</span>
                                        }
                                    </td>
                                    <td>@entry.AddedDate.ToString("dd.MM.yyyy")</td>
                                    <td class="text-center">
                                        <div class="btn-group">
                                            <a asp-action="Details" asp-route-id="@entry.Id" 
                                               class="btn btn-sm btn-info" title="Деталі">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            @if (entry.IsActive)
                                            {
                                                <button type="button" class="btn btn-sm btn-success" 
                                                        data-bs-toggle="modal" 
                                                        data-bs-target="#removeModal@(entry.Id)"
                                                        title="Зняти з блокування">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                            }
                                            else
                                            {
                                                <form asp-action="Restore" asp-route-id="@entry.Id" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-sm btn-warning" title="Відновити">
                                                        <i class="fas fa-redo"></i>
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                                
                                <!-- Modal для зняття з блокування -->
                                <div class="modal fade" id="removeModal@(entry.Id)" tabindex="-1">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <form asp-action="Remove" asp-route-id="@entry.Id" method="post">
                                                @Html.AntiForgeryToken()
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Зняти з чорного списку</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <p>Ви впевнені, що хочете зняти <strong>@entry.FullName</strong> з чорного списку?</p>
                                                    <div class="mb-3">
                                                        <label class="form-label">Причина зняття</label>
                                                        <textarea name="removalReason" class="form-control" rows="3" required></textarea>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Скасувати</button>
                                                    <button type="submit" class="btn btn-success">Підтвердити</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center text-muted py-5">
                    <i class="fas fa-inbox fa-4x mb-3"></i>
                    <h5>Записів не знайдено</h5>
                </div>
            }
        </div>
    </div>
</div>