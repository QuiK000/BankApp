@model WebApplication3.Models.CreditScore

@{
ViewData["Title"] = "Перевірка кредитоспроможності";
var isBlacklisted = ViewBag.IsBlacklisted as bool? ?? false;
}

<div class="container">
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold text-primary">
            <i class="fas fa-user-check me-2"></i>
            Перевірка кредитоспроможності
        </h1>
        <p class="lead text-muted">Дізнайтеся свій кредитний рейтинг</p>
    </div>

    @if (isBlacklisted)
    {
    <div class="alert alert-danger border-0 shadow-sm mb-4">
        <div class="d-flex">
            <div class="me-3">
                <i class="fas fa-exclamation-triangle fa-3x"></i>
            </div>
            <div>
                <h5 class="fw-bold mb-2">Увага!</h5>
                <p class="mb-0">
                    На жаль, ви перебуваєте в чорному списку банку.
                    Зверніться до менеджера для уточнення деталей.
                </p>
            </div>
        </div>
    </div>
    }
    else if (Model != null)
    {
    <div class="row">
        <div class="col-lg-4 mb-4">
            <div class="card shadow-lg border-0 text-center">
                <div class="card-body p-5">
                    <div class="mb-4">
                        <i class="fas fa-star fa-4x text-warning"></i>
                    </div>
                    <h2 class="fw-bold mb-2">Ваш рейтинг</h2>
                    <div class="display-1 fw-bold text-primary mb-3">@Model.Rating</div>
                    <div class="progress mb-3" style="height: 30px;">
                        <div class="progress-bar @GetRatingProgressClass(Model.Rating)"
                             style="width: @((Model.TotalScore / 10.0))%">
                            @Model.TotalScore / 1000
                        </div>
                    </div>
                    <p class="text-muted mb-0">@GetRatingDescription(Model.Rating)</p>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-gradient-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-line me-2"></i>
                        Детальний аналіз
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row text-center mb-4">
                        <div class="col-md-6 mb-3">
                            <div class="p-3 bg-light rounded">
                                <small class="text-muted d-block mb-1">Ймовірність дефолту</small>
                                <div class="h3 fw-bold @GetDefaultProbabilityClass(Model.DefaultProbability)">
                                    @Model.DefaultProbability.ToString("F1")%
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="p-3 bg-light rounded">
                                <small class="text-muted d-block mb-1">Рекомендована сума</small>
                                <div class="h3 fw-bold text-success">
                                    @Model.RecommendedMaxAmount.ToString("N0") грн
                                </div>
                            </div>
                        </div>
                    </div>

                    <h6 class="fw-bold mb-3">Розподіл балів:</h6>

                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-1">
                            <span><i class="fas fa-birthday-cake text-primary me-2"></i>Вік</span>
                            <strong>@Model.AgeScore / 150</strong>
                        </div>
                        <div class="progress" style="height: 20px;">
                            <div class="progress-bar bg-primary" style="width: @((Model.AgeScore / 150.0 * 100))%">
                                @Model.AgeScore
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-1">
                            <span><i class="fas fa-history text-success me-2"></i>Кредитна історія</span>
                            <strong>@Model.CreditHistoryScore / 350</strong>
                        </div>
                        <div class="progress" style="height: 20px;">
                            <div class="progress-bar bg-success" style="width: @((Model.CreditHistoryScore / 350.0 * 100))%">
                                @Model.CreditHistoryScore
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-1">
                            <span><i class="fas fa-money-bill-wave text-warning me-2"></i>Дохід</span>
                            <strong>@Model.IncomeScore / 250</strong>
                        </div>
                        <div class="progress" style="height: 20px;">
                            <div class="progress-bar bg-warning" style="width: @((Model.IncomeScore / 250.0 * 100))%">
                                @Model.IncomeScore
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-1">
                            <span><i class="fas fa-briefcase text-info me-2"></i>Зайнятість</span>
                            <strong>@Model.EmploymentScore / 150</strong>
                        </div>
                        <div class="progress" style="height: 20px;">
                            <div class="progress-bar bg-info" style="width: @((Model.EmploymentScore / 150.0 * 100))%">
                                @Model.EmploymentScore
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-1">
                            <span><i class="fas fa-credit-card text-danger me-2"></i>Існуючі борги</span>
                            <strong>@Model.ExistingDebtsScore / 100</strong>
                        </div>
                        <div class="progress" style="height: 20px;">
                            <div class="progress-bar bg-danger" style="width: @((Model.ExistingDebtsScore / 100.0 * 100))%">
                                @Model.ExistingDebtsScore
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="alert alert-info border-0 shadow-sm">
                <div class="d-flex">
                    <div class="me-3">
                        <i class="fas fa-lightbulb fa-2x"></i>
                    </div>
                    <div>
                        <h6 class="fw-bold mb-2">Як покращити свій рейтинг?</h6>
                        <ul class="mb-0 ps-3">
                            <li>Своєчасно погашайте існуючі кредити</li>
                            <li>Заповніть додаткову інформацію в профілі</li>
                            <li>Підтримуйте стабільний дохід</li>
                            <li>Уникайте прострочених платежів</li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a asp-action="Index" class="btn btn-primary btn-lg">
                    <i class="fas fa-search me-2"></i>
                    Переглянути доступні кредити
                </a>
            </div>
        </div>
    </div>
    }
    else
    {
    <div class="text-center py-5">
        <i class="fas fa-calculator fa-4x text-muted mb-3"></i>
        <h4 class="text-muted">Розрахунок кредитного скорингу</h4>
        <p class="text-muted mb-4">Завантаження даних...</p>
    </div>
    }
</div>

@functions {
string GetRatingProgressClass(string rating)
{
return rating switch
{
"A+" => "bg-success",
"A" => "bg-success",
"B+" => "bg-primary",
"B" => "bg-warning",
"C" => "bg-warning",
"D" => "bg-danger",
"E" => "bg-danger",
_ => "bg-secondary"
};
}

string GetRatingDescription(string rating)
{
return rating switch
{
"A+" => "Відмінний кредитний рейтинг",
"A" => "Дуже хороший рейтинг",
"B+" => "Хороший рейтинг",
"B" => "Задовільний рейтинг",
"C" => "Посередній рейтинг",
"D" => "Низький рейтинг",
"E" => "Дуже низький рейтинг",
_ => "Невідомий рейтинг"
};
}

string GetDefaultProbabilityClass(decimal probability)
{
if (probability < 10) return "text-success";
if (probability < 25) return "text-warning";
return "text-danger";
}
}