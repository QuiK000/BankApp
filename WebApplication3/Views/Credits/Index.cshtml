@model IEnumerable<WebApplication3.Models.Credit>

@{
    ViewData["Title"] = "Кредитні продукти";
}

<div class="hero-section text-center py-5 mb-5">
    <div class="container">
        <h1 class="display-4 fw-bold text-primary mb-3">
            <i class="fas fa-coins me-3"></i>
            Кредитні продукти
        </h1>
        <p class="lead text-muted">
            Оберіть найкращий кредит для ваших потреб
        </p>
    </div>
</div>

<div class="container">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card credit-card h-100 shadow-hover">
                    <div class="card-body d-flex flex-column">
                        <div class="credit-icon text-center mb-3">
                            <i class="fas @item.IconClass fa-3x text-primary"></i>
                        </div>
                        
                        <h5 class="card-title fw-bold text-center mb-3">@item.Name</h5>
                        
                        <p class="card-text text-muted mb-3">@item.Description</p>
                        
                        <div class="credit-details mb-3">
                            <div class="detail-item d-flex justify-content-between mb-2">
                                <span class="text-muted">
                                    <i class="fas fa-percent me-1"></i>
                                    Ставка:
                                </span>
                                <span class="fw-bold text-success">@item.InterestRate%</span>
                            </div>
                            
                            <div class="detail-item d-flex justify-content-between mb-2">
                                <span class="text-muted">
                                    <i class="fas fa-money-bill-wave me-1"></i>
                                    Сума:
                                </span>
                                <span class="fw-bold">
                                    @item.MinAmount.ToString("N0") - @item.MaxAmount.ToString("N0") грн
                                </span>
                            </div>
                            
                            <div class="detail-item d-flex justify-content-between">
                                <span class="text-muted">
                                    <i class="fas fa-calendar me-1"></i>
                                    Термін:
                                </span>
                                <span class="fw-bold">
                                    @item.MinTermMonths - @item.MaxTermMonths міс.
                                </span>
                            </div>
                        </div>
                        
                        <div class="mt-auto">
                            <a asp-action="Details" asp-route-id="@item.Id" 
                               class="btn btn-outline-primary w-100 mb-2">
                                <i class="fas fa-info-circle me-1"></i>
                                Детальніше
                            </a>
                            <a asp-action="Apply" asp-route-id="@item.Id" 
                               class="btn btn-primary w-100">
                                <i class="fas fa-paper-plane me-1"></i>
                                Оформити заявку
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4 text-center mb-4">
            <div class="feature-box p-4">
                <i class="fas fa-shield-alt fa-3x text-primary mb-3"></i>
                <h5 class="fw-bold">Надійність</h5>
                <p class="text-muted">Ліцензована банківська установа</p>
            </div>
        </div>
        <div class="col-md-4 text-center mb-4">
            <div class="feature-box p-4">
                <i class="fas fa-clock fa-3x text-primary mb-3"></i>
                <h5 class="fw-bold">Швидкість</h5>
                <p class="text-muted">Розгляд заявки за 1 день</p>
            </div>
        </div>
        <div class="col-md-4 text-center mb-4">
            <div class="feature-box p-4">
                <i class="fas fa-handshake fa-3x text-primary mb-3"></i>
                <h5 class="fw-bold">Довіра</h5>
                <p class="text-muted">Більше 10 000 задоволених клієнтів</p>
            </div>
        </div>
    </div>
</div>