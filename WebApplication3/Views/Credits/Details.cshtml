@model WebApplication3.Models.Credit

@{
    ViewData["Title"] = Model.Name;
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-action="Index">
                    <i class="fas fa-home me-1"></i>
                    Кредити
                </a>
            </li>
            <li class="breadcrumb-item active">@Model.Name</li>
        </ol>
    </nav>

    <div class="card shadow-lg border-0 mb-4">
        <div class="card-header bg-gradient-primary text-white py-4">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h2 class="mb-0">
                        <i class="fas @Model.IconClass me-2"></i>
                        @Model.Name
                    </h2>
                </div>
                <div class="col-md-4 text-md-end">
                    <span class="badge bg-light text-primary fs-5 px-4 py-2">
                        <i class="fas fa-percent me-1"></i>
                        @Model.InterestRate% річних
                    </span>
                </div>
            </div>
        </div>
        
        <div class="card-body p-4">
            <div class="row">
                <div class="col-md-8">
                    <h5 class="fw-bold mb-3">
                        <i class="fas fa-info-circle text-primary me-2"></i>
                        Опис
                    </h5>
                    <p class="lead text-muted mb-4">@Model.Description</p>
                    
                    <h5 class="fw-bold mb-3">
                        <i class="fas fa-list-check text-primary me-2"></i>
                        Необхідні документи
                    </h5>
                    <div class="alert alert-light border-start border-primary border-4">
                        @foreach (var req in Model.Requirements.Split(','))
                        {
                            <div class="mb-2">
                                <i class="fas fa-check-circle text-success me-2"></i>
                                @req.Trim()
                            </div>
                        }
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="card bg-light border-0 mb-3">
                        <div class="card-body">
                            <h6 class="fw-bold mb-3 text-primary">
                                <i class="fas fa-calculator me-2"></i>
                                Параметри кредиту
                            </h6>
                            
                            <div class="credit-param mb-3">
                                <div class="d-flex justify-content-between mb-1">
                                    <small class="text-muted">Мінімальна сума:</small>
                                    <strong>@Model.MinAmount.ToString("N0") грн</strong>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <small class="text-muted">Максимальна сума:</small>
                                    <strong>@Model.MaxAmount.ToString("N0") грн</strong>
                                </div>
                            </div>
                            
                            <hr>
                            
                            <div class="credit-param mb-3">
                                <div class="d-flex justify-content-between mb-1">
                                    <small class="text-muted">Мінімальний термін:</small>
                                    <strong>@Model.MinTermMonths міс.</strong>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <small class="text-muted">Максимальний термін:</small>
                                    <strong>@Model.MaxTermMonths міс.</strong>
                                </div>
                            </div>
                            
                            <hr>
                            
                            <div class="text-center">
                                <div class="fs-4 fw-bold text-success mb-2">
                                    @Model.InterestRate%
                                </div>
                                <small class="text-muted">річна ставка</small>
                            </div>
                        </div>
                    </div>
                    
                    <a asp-action="Apply" asp-route-id="@Model.Id" 
                       class="btn btn-primary btn-lg w-100 mb-2">
                        <i class="fas fa-paper-plane me-2"></i>
                        Оформити заявку
                    </a>
                    
                    <a asp-action="Index" class="btn btn-outline-secondary w-100">
                        <i class="fas fa-arrow-left me-2"></i>
                        Повернутись
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="alert alert-info border-0 shadow-sm">
        <div class="d-flex">
            <div class="me-3">
                <i class="fas fa-info-circle fa-2x text-info"></i>
            </div>
            <div>
                <h6 class="fw-bold mb-2">Зверніть увагу!</h6>
                <p class="mb-0">
                    Остаточні умови кредитування визначаються індивідуально після розгляду заявки. 
                    Банк залишає за собою право відмовити у видачі кредиту без пояснення причин.
                </p>
            </div>
        </div>
    </div>
</div>